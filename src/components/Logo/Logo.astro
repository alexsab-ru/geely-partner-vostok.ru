---
import logo from './logo-vertical.svg'; //return object
import {SITE_NAME} from '@/const';
const path = Astro.url.pathname;
---
{path === '/' ? (
<div class="flex flex-nowrap items-center xs:gap-2 gap-3 divide-x divide-black/20">
    <img src={logo.src} class="h-6 sm:h-8 xl:h-10" alt={SITE_NAME} />
    <span class="xs:pl-2 pl-3 xl:text-2xl uppercase font-bold !leading-none select-none">{SITE_NAME}</span>
</div>
) : (
<a href="/" class="flex flex-nowrap items-center xs:gap-2 gap-3 divide-x divide-black/20">
    <img src={logo.src} class="h-6 sm:h-8 xl:h-10" alt={SITE_NAME} />
    <span class="xs:pl-2 pl-3 xl:text-2xl uppercase font-bold !leading-none select-none">{SITE_NAME}</span>
</a>
)}
